<?xml version="1.0" encoding="utf-8"?>
<androidx.wear.widget.BoxInsetLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/record_padding"
    android:background="@color/record_background">

    <LinearLayout
        android:orientation="vertical"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/iv_record_icon"
            android:layout_width="@dimen/record_icon_size"
            android:layout_height="@dimen/record_icon_size"
            android:src="@drawable/ic_mic"
            android:layout_gravity="center"
            android:contentDescription="@string/desc_record_icon"
            android:layout_marginBottom="@dimen/record_icon_margin_bottom"
            app:tint="@color/record_icon_tint" />

        <ScrollView
            android:layout_width="wrap_content"
            android:layout_height="@dimen/record_status_height"
            android:layout_gravity="center"
            android:background="@android:color/transparent">
            <TextView
                android:id="@+id/tv_record_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/record_status_text"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:padding="@dimen/record_status_padding"
                android:scrollbars="vertical" />
        </ScrollView>

        <Button
            android:id="@+id/btn_start"
            android:layout_width="@dimen/record_button_width"
            android:layout_height="@dimen/record_button_height"
            android:text="@string/start_recording"
            android:textColor="@color/white"
            android:layout_gravity="center"
            android:layout_marginBottom="@dimen/record_button_margin_bottom"
            android:padding="@dimen/record_button_padding"
            android:background="@drawable/rounded_button_bg" />
    </LinearLayout>
</androidx.wear.widget.BoxInsetLayout>
