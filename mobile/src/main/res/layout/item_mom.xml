<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:padding="@dimen/item_mom_padding"
    android:layout_width="match_parent"
    android:layout_height="@dimen/item_mom_linearlayout_height"
    android:background="@color/item_mom_bg">

    <TextView
        android:id="@+id/mom_title"
        android:textSize="@dimen/item_mom_title_text_size"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/meeting_title"
        android:textColor="@color/item_mom_text" />

    <TextView
        android:id="@+id/mom_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/note_date_sample"
        android:textColor="@color/item_mom_text" />

    <TextView
        android:id="@+id/mom_summary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/summary"
        android:textSize="@dimen/item_mom_summary_text_size"
        android:layout_marginTop="@dimen/item_mom_summary_margin_top"
        android:layout_marginBottom="@dimen/item_mom_summary_margin_bottom"
        android:textColor="@color/item_mom_text" />

    <TextView
        android:id="@+id/mom_tag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/tag"
        android:textSize="@dimen/item_mom_tag_text_size"
        android:layout_marginBottom="@dimen/item_mom_tag_margin_bottom"
        android:textColor="@color/item_mom_text" />

    <TextView
        android:id="@+id/mom_read_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/read_unread"
        android:textSize="@dimen/item_mom_read_status_text_size"
        android:layout_marginBottom="@dimen/item_mom_read_status_margin_bottom"
        android:textColor="@color/item_mom_text" />

    <ProgressBar
        android:id="@+id/mom_loader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:layout_marginTop="@dimen/item_mom_loader_margin_top"
        android:layout_marginBottom="@dimen/item_mom_loader_margin_bottom" />

    <TextView
        android:id="@+id/mom_pending_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/pending_message"
        android:textSize="@dimen/item_mom_pending_message_text_size"
        android:visibility="gone"
        android:layout_marginBottom="@dimen/item_mom_pending_message_margin_bottom"
        android:textColor="@color/item_mom_text" />

    <TextView
        android:id="@+id/mom_minutes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/recognized_text"
        android:textSize="@dimen/item_mom_minutes_text_size"
        android:textColor="@color/item_mom_text"
        android:layout_marginTop="@dimen/item_mom_minutes_margin_top" />
</LinearLayout>
