<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:padding="12dp"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    android:background="#000000">

    <TextView
        android:id="@+id/mom_title"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Meeting Title" />

    <TextView
        android:id="@+id/mom_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2025-08-10" />

    <TextView
        android:id="@+id/mom_summary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Summary"
        android:textSize="14sp"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="4dp" />

    <TextView
        android:id="@+id/mom_tag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tag"
        android:textSize="14sp"
        android:layout_marginBottom="4dp" />

    <TextView
        android:id="@+id/mom_read_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Read/Unread"
        android:textSize="14sp"
        android:layout_marginBottom="4dp" />

    <ProgressBar
        android:id="@+id/mom_loader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="4dp" />

    <TextView
        android:id="@+id/mom_pending_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Summary is being generated..."
        android:textSize="14sp"
        android:visibility="gone"
        android:layout_marginBottom="4dp" />

    <TextView
        android:id="@+id/mom_minutes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Recognized Text"
        android:textSize="16sp"
        android:textColor="#FFFFFF"
        android:layout_marginTop="4dp" />
</LinearLayout>
