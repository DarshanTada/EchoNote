<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Top Bar with App Name -->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/topBar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="#EFE9E1"
        app:title="EchoNote"
        app:titleTextColor="#322D29"
        app:titleTextAppearance="@style/TextAppearance.AppCompat.Large"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Button at the top -->
    <Button
        android:id="@+id/btn_mom_list"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="View New List"
        android:layout_margin="16dp"
        android:background="#72383D"
        android:textColor="#FFFFFF"
        android:padding="12dp"
        android:gravity="center"
        android:clipToOutline="true"
        android:backgroundTint="#72383D"
        android:backgroundTintMode="src_in"
        android:shape="rectangle"
        android:radius="24dp"
        app:layout_constraintTop_toBottomOf="@id/topBar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        style="@style/RoundedButton"/>

    <!-- CardView below the button -->
    <androidx.cardview.widget.CardView
        android:id="@+id/tagCard"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="16dp"
        app:cardCornerRadius="12dp"
        app:cardElevation="4dp"
        app:cardBackgroundColor="#EFE9E1"
        app:layout_constraintTop_toBottomOf="@id/btn_mom_list"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="#EFE9E1">

        <ListView
            android:id="@+id/tagListView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:divider="#322D29"
            android:dividerHeight="1dp"
            android:padding="8dp"
            android:background="#EFE9E1" />

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>
